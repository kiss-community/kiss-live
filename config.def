# Directory to work from, /tmp is chosen since it is often a ramfs.
WORKDIR="/tmp/kiss-live-workdir"

REPO_URL="git+https://github.com/kiss-community/repo"
TARBALL="kiss-rootfs-$(date +%Y.%m)-x86_64.tar.xz"

url=https://github.com/kisslinux
ver=2020.9-2
tar="kiss-chroot-$ver.tar.xz"
dl="$url/repo/releases/download/$ver/$tar"

isolabel="kiss-live-$(date +%Y.%m)"

here="$(pwd)"
repodir=${repodir:-$here/repo}
filesdir=${filesdir:-$here/files}
hooksdir=${hooksdir:-$here/hooks}

rootfsdir=${rootfsdir:-$WORKDIR/rootfs}
isodir=${isodir:-$WORKDIR/iso}
tmpdir=${tmpdir:-$WORKDIR/tmp}

# Extra packages to install outside of what already is in the tarball.
extra_pkgs="baseinit dhcpcd linux wpa_supplicant"

syslinux_files="isohdpfx.bin isolinux.bin ldlinux.c32 libcom32.c32 libutil.c32"
grub_mod="all_video cat configfile disk echo efi_gop efi_uga fat gzio help iso9660 linux ls multiboot2 normal part_gpt part_msdos search search_label test true"

